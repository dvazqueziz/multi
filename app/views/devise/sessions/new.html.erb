<div class="w-lg-500px bg-body rounded shadow-sm p-10 p-lg-15 mx-auto">
  <%= form_for(resource,
               as: resource_name,
               url: session_path(resource_name),
               html: { class: 'form w-100',
                       novalidate: 'novalidate',
                       id: 'kt_sign_in_form',
                       data: {
                         controller: 'devise--sessions--new' } }) do |f| %>
    <div class="text-center mb-10">
      <h1 class="text-dark mb-3"><%= t('.sign_in') %></h1>
      <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
        <div class="text-gray-400 fw-bold fs-4"><%= _('¿Nuevo aquí?') %>
          <%= link_to t(".sign_up"), new_registration_path(resource_name), class: 'link-primary fw-bolder' %><br/>
        </div>
      <% end %>
    </div>
    <div class="fv-row mb-10">
      <label class="form-label fs-6 fw-bolder text-dark"><%= _('Email') %></label>
      <%= f.email_field :email, autofocus: true, autocomplete: false, class: 'form-control form-control-lg form-control-solid', tabindex: '1' %>
    </div>
    <div class="fv-row mb-10">
      <div class="d-flex flex-stack mb-2">
        <label class="form-label fw-bolder text-dark fs-6 mb-0"><%= _('Contraseña') %></label>
        <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
          <%= link_to t(".forgot_your_password"), new_password_path(resource_name), class: 'link-primary fs-6 fw-bolder' %>
        <% end %>
      </div>

      <div class="position-relative mb-3">
        <%= f.password_field :password, autocomplete: false, class: 'form-control form-control-lg form-control-solid', tabindex: '2' %>
      </div>
    </div>

    <div class="text-center">
      <%= f.button type: 'submit', id: 'kt_sign_in_submit', class: 'btn btn-lg btn-primary w-100 mb-5 fw-bolder' do %>
        <%= content_tag :span, t('.sign_in'), class: 'indicator-label' %>
        <%= content_tag :span, nil, class: 'indicator-progress' do %>
          <%= _('Por favor espere...') %>
          <%= content_tag :span, nil, class: 'spinner-border spinner-border-sm align-middle ms-2' %>
        <% end %>
      <% end %>
    </div>
  <% end %>
</div>