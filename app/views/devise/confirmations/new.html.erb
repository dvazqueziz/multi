<div class="w-lg-500px bg-body rounded shadow-sm p-10 p-lg-15 mx-auto">
  <%= form_for(resource,
               as: resource_name,
               url: confirmation_path(resource_name),
               html: { method: :post,
                       class: 'form w-100',
                       novalidate: 'novalidate',
                       id: 'kt_confirmation_new_form',
                       data: { controller: 'devise--confirmations--new' } }) do |f| %>
    <div class="text-center mb-10">
      <h1 class="text-dark mb-3"><%= t('.resend_confirmation_instructions') %></h1>
    </div>
    <%= render "devise/shared/error_messages", resource: resource %>
    <div class="fv-row mb-10">
      <label class="form-label fw-bolder text-gray-900 fs-6"><%= _('Email') %></label>
      <%= f.email_field :email, autofocus: true, autocomplete: false,
                        class: 'form-control form-control-solid',
                        value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email) %>
    </div>
    <div class="d-flex flex-wrap justify-content-center pb-lg-0">
      <%= f.button type: 'submit', id: 'kt_resend_confirmation_submit', class: 'btn btn-lg btn-primary fw-bolder me-4' do %>
        <%= content_tag :span, _('Enviar'), class: 'indicator-label' %>
        <%= content_tag :span, nil, class: 'indicator-progress' do %>
          <%= _('Por favor espere...') %>
          <%= content_tag :span, nil, class: 'spinner-border spinner-border-sm align-middle ms-2' %>
        <% end %>
      <% end %>
      <%= link_to _('Cancelar'), new_user_session_path, class: 'btn btn-lg btn-light-primary fw-bolder' %>
    </div>
  <% end %>
</div>